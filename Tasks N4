  // 1. მოცემულია 2 ცვლადი. გავუცვალოთ ადგილები. (არ გამოვიყენოთ დამატებითი ცვლადი)
  {
    int a;
    int b;

    a = 5;
    b = 2;

    a = a * b; // a ხდება 10 
    b = a / b; // b ხდება 5
    a = a / b; // a ხდება 2
  
  }
  
  /*  
  2. ვიპოვოთ მარკუთხედის ფართობი. მოცემულია 2 მთელი დადებითი რიცხვი a და b. 
   ავღწეროთ ცვლადი სახელად area და მივანიჭოთ მართკუთხედის ფართობი. 
   
   */
  { 
     int a;
     int b;
     int area;

     a = 2; // მართკუთხედის მოკლე გვერდის სიგრძეა 2
     b = 4; // მართკუხედის გრძელი გვერდის სიგრძეა 4 
     area = a * b; / მოკლე გვერდის სიგრძე მრავლდება გრძელი გვერდის სიგრძეზე და ვიღებთ ფართობს
   }
   
   
   // 3. პირობა იგივეა რაც მეორე ამოცანაში ოღონდ ვიპოვოთ პერიმეტრი.
  { 
    int a;
    int b;
    int per;
    
    a = 2; // მართკუთხედის მოკლე გვერდის სიგრძეა 2
    b = 4; // მართკუხედის გრძელი გვერდის სიგრძეა 4
   
    per = (2*a) + (2*b); / პერიმეტრის გასაგებად ყველა გვერდის სიგრძეების ჯამი გვჭირდება,
    
  }
   /* 4. ფუნთუშა ღირს a ლარი და b თეთრი. 
    გამოთვალეთ რამდენი თეთრი არის გადასახდელი n რაოდენობის ფუნთუშაში.
    პროგრამაში მოცემულია სამი მთელი რიცხვი: a, b, n შესაბამისად
    დავთვალოთ რამდენი თეთრი უნდა გადავიხადოთ და მოვათავსოთ result ცვლადში. */
  {  
    int a;
    int b;
    int n;
    int result;
    
    a = 2; // ამ ცვლადში ვინახავთ ლარებს
    b = 20; // ამ ცვლადში ვინახავთ თეთრებს
    n = 4; // ამ ცვლადში რაოდენობას
     
    result = (a*100 + b) * n; // აქ a ს ანუ ლარებს ვაქცევთ თეთრებად 100 ზე გამრავლებით, 
                              // ვუმატებთ b ს ანუ 20 თეთრს და მიღებულ თანხას ვამრავლებთ რაოდენობაზე.
    }
    
    Examples:
    Input           |   Result
        10 15 2     |   2030
    Input           |   Result
        2 50 4      |   1000
